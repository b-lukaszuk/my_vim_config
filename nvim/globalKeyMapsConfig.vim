" leaderkey
let mapleader = "\<Space>"

" remaps
noremap <leader>; :
noremap <C-x>d :E<Enter>
noremap <leader>bk :bd<Enter> " buffer kill
noremap <leader>fs :w<Enter> " file save
noremap <leader>wh <-w>h
noremap <leader>wj <C-w>j
noremap <leader>wk <C-w>k
noremap <leader>wl <C-w>l
noremap <leader>q :q<Enter> " window kill
noremap <leader>wq :q<Enter> " window save and kill
noremap <leader>ws <C-w>s
noremap <leader>wv <C-w>v
noremap <C-x>1 <C-w>o
